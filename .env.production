# PRODUCTION CONFIGURATION
# Telegram Query Bridge - Ambiente de Produção

# API Configuration
API_KEY=tg_bridge_prod_$(date +%s)_$(openssl rand -hex 16)
PORT=3000
NODE_ENV=production

# Telegram Configuration - INSIRA SEUS VALORES REAIS AQUI
# Obtenha em: https://my.telegram.org/apps
API_ID=SEU_API_ID_NUMERICO
API_HASH=SUA_API_HASH_STRING_LONGA

# ID do grupo (negativo para grupos, positivo para canais)
CHAT_ID=-1001234567890

# Seu número completo com código do país
PHONE_NUMBER=+55DD900000000

# Python Service URL
PYTHON_SERVICE_URL=http://127.0.0.1:8000

# Security & Performance
CORS_ORIGIN=https://seu-dominio.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
WORKERS=4
MAX_CONNECTIONS=1000
TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL/TLS (se aplicável)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
