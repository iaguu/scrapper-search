# Production Environment Configuration
# Telegram Query Bridge API - Production Settings

# API Configuration
API_KEY=prod_secure_api_key_$(date +%s)
PORT=3000
NODE_ENV=production

# Telegram Configuration - PRODUCTION VALUES REQUIRED
API_ID=YOUR_TELEGRAM_API_ID
API_HASH=YOUR_TELEGRAM_API_HASH
CHAT_ID=YOUR_TARGET_CHAT_ID
PHONE_NUMBER=YOUR_PHONE_NUMBER_WITH_COUNTRY_CODE

# Python Service URL
PYTHON_SERVICE_URL=http://127.0.0.1:8000

# Security Settings
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Performance
WORKERS=4
MAX_CONNECTIONS=1000
TIMEOUT=30000

# Database (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/telegram_bridge

# Redis (if needed for caching)
# REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL/TLS (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_PATH=/backups/telegram_bridge
